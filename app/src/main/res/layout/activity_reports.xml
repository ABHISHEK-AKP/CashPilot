<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Reports">

<!-- Back Arrow -->
<ImageView
    android:id="@+id/btn_back"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_margin="16dp"
    android:src="@drawable/back"
    android:contentDescription="Back"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:tint="@color/orange" />

<!-- Title -->
<TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reports"
    android:textSize="28sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    app:layout_constraintTop_toBottomOf="@id/btn_back"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp" />

<!-- Tab Layout for Expense and Monthly Report -->

    <TextView
        android:id="@+id/expenses_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="288dp"
        android:layout_marginTop="8dp"
        android:text="Your Expenses"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <View
    android:id="@+id/tab_indicator"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@android:color/darker_gray"
    app:layout_constraintTop_toBottomOf="@id/expenses_tab"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp" />

<!-- Circle Progress Layout -->
<LinearLayout
    android:id="@+id/progress_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    app:layout_constraintTop_toBottomOf="@id/tab_indicator"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp"
    android:paddingHorizontal="16dp">

    <!-- Current Week -->

    <ProgressBar
        android:id="@+id/progress_current_week"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateOnly="false"
        android:max="100"
        android:progress="70"
        android:progressDrawable="@drawable/custom_weekly_progress_bar"/>

    <TextView
        android:id="@+id/tv_current_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1300"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginStart="-55dp"
        android:layout_gravity="center" />

    <!-- Last Week -->
    <ProgressBar
        android:id="@+id/progress_last_week"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/last_week_progress_bar"
        android:max="100"
        android:progress="20"
        android:layout_marginStart="70dp" />

    <TextView
        android:id="@+id/tv_last_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="400"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginStart="-55dp"
        android:layout_gravity="center" />

    <!-- Last Month -->
    <ProgressBar
        android:id="@+id/progress_last_month"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/last_m_progress_bar"
        android:max="100"
        android:progress="60"
        android:layout_marginStart="70dp" />

    <TextView
        android:id="@+id/tv_last_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6000"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginStart="-55dp"
        android:layout_gravity="center" />
</LinearLayout>

<!-- Bar Chart Section -->

    <TextView
        android:id="@+id/chart_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="20dp"
        android:text="Last vs This month"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_container" />
    <View
        android:id="@+id/tab_indicator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/chart_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart_label" />

<!-- Expense List -->
<TextView
    android:id="@+id/spend_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="In vs Out Spend"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    app:layout_constraintTop_toBottomOf="@id/bar_chart"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginTop="24dp"
    android:layout_marginStart="16dp" />

<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_expenses"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/spend_label"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
